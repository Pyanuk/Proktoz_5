<Window x:Class="TEST.Redactor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEST"
        mc:Ignorable="d"
        Title="Redactor" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>


        <DataGrid x:Name="tablichka" Grid.Row="0" Grid.Column="0" SelectionChanged="tablichka_SelectionChanged" BorderBrush="#FF25034A" Background="Blue" Foreground="Black" FontFamily="Arial"/>
        <Button x:Name="add_que" Content="добавить тест" Background="Aqua" FontSize="18" FontFamily="Arial Black" Click="add_que_Click" Grid.Row="1"  VerticalAlignment="Center" Height="120" />


    </Grid>
</Window>
